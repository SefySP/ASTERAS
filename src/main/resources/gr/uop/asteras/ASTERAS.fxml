<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: grey;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gr.uop.asteras.MainController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="ASTERAS">
               <font>
                  <Font name="DejaVu Sans Bold" size="48.0" />
               </font>
            </Label>
            <TextField fx:id="searchTextField" maxWidth="400.0" prefWidth="300.0" promptText="Search">
               <font>
                  <Font name="DejaVu Sans Mono Oblique" size="14.0" />
               </font>
            </TextField>
            <HBox alignment="CENTER" spacing="15.0" VBox.vgrow="NEVER">
               <children>
                  <Button maxWidth="150.0" mnemonicParsing="false" onAction="#search" prefWidth="150.0" text="Search">
                     <font>
                        <Font name="DejaVu Sans Mono Bold Oblique" size="14.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#lucky" text="I'm feeling lucky">
                     <font>
                        <Font name="DejaVu Sans Mono Bold" size="14.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
